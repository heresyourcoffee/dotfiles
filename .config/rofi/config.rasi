@import "~/.cache/wal/colors-rofi-dark.rasi"

configuration {
    modi:                       "drun,run";
    font:                       "Monofur Nerd Font Bold 10";
    show-icons:                 true;
    icon-theme:                 "Fluent Dark";
    display-drun:               " ";
    display-run:                " ";
    display-window:             "WINDOW";
    drun-display-format:        "{name}";
    hover-select:               false;
    scroll-method:              1;
    me-select-entry:            "";
    me-accept-entry:            "MousePrimary";
    window-format:              "{w} · {c} · {t}";
    
}

window {
    width:                        220px;
    x-offset:                     10px;
    y-offset:                     10px;
    spacing:                      0px;
    padding:                      8px;
    margin:                       0px; 
    border:                       0px;
    border-color:                 transparent;
    cursor:                       "default";
    transparency:                 "real";
    location:                     northwest;
    anchor:                       center;
    fullscreen:                   false;
    enabled:                      true;
    border-radius:                10px;
}

listview {
    columns: 1;
    lines: 3;
    fixed-height: true;
    fixed-columns: true;
    cycle: false;
    scrollbar: false;
    border: 2px solid;
}


prompt {
    padding: 0 5px 0 5px;
}

inputbar {
    children: ["prompt", "entry"];
    spacing: 2px;
    border-radius: 8px;
    padding: 4px;
}

entry {
    placeholder: " Search";
    padding: 2px;
}

mainbox {
    spacing: 4px;
    margin: 0;
    padding: 0;
    children: ["inputbar", "listview", "message"];
}

listview{
    border-radius: 8px;
}

element {
    spacing: 12;
    margin: 0;
    padding: 8px;
    border: 0px solid;
    border-radius: 0;
    background-color: transparent;
}

element normal.normal {
	background-color: transparent;
}

element alternate.normal {
	background-color: transparent;
}

element selected.active {
	text-color: @background;
}

element selected.normal {
	text-color: @background;
}

